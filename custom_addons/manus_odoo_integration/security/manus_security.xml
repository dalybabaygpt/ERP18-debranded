<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Manus Manager Group -->
        <record id="group_manus_manager" model="res.groups">
            <field name="name">Manus Manager</field>
            <field name="category_id" ref="base.module_category_hidden"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
            <field name="users" eval="[(4, ref('base.user_admin'))]"/>
        </record>
        
        <!-- Manus User Group -->
        <record id="group_manus_user" model="res.groups">
            <field name="name">Manus User</field>
            <field name="category_id" ref="base.module_category_hidden"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        </record>
        
        <!-- Security Rules -->
        <record id="manus_connector_manager_rule" model="ir.rule">
            <field name="name">Manus Connector: Managers Only</field>
            <field name="model_id" ref="model_manus_connector"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('manus_odoo_integration.group_manus_manager'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>
        
        <record id="manus_connector_user_rule" model="ir.rule">
            <field name="name">Manus Connector: Users Read Only</field>
            <field name="model_id" ref="model_manus_connector"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('manus_odoo_integration.group_manus_user'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>
    </data>
</odoo>
