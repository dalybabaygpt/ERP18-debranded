<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form_inherit_manus" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.manus</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="70"/>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('settings')]" position="inside">
                <div class="app_settings_block" data-string="Manus AI" string="Manus AI" data-key="manus_odoo_integration">
                    <h2>Manus AI Integration</h2>
                    <div class="row mt16 o_settings_container" id="manus_api_settings">
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane"/>
                            <div class="o_setting_right_pane">
                                <span class="o_form_label">API Configuration</span>
                                <div class="text-muted">
                                    Configure your Manus AI API credentials
                                </div>
                                <div class="content-group mt16">
                                    <div class="row">
                                        <label for="manus_api_key" class="col-lg-3 o_light_label"/>
                                        <field name="manus_api_key" password="True"/>
                                    </div>
                                    <div class="row">
                                        <label for="manus_api_endpoint" class="col-lg-3 o_light_label"/>
                                        <field name="manus_api_endpoint"/>
                                    </div>
                                    <div class="mt8">
                                        <button name="action_manus_test_connection" type="object" class="btn btn-primary">
                                            <i class="fa fa-plug"/> Test Connection
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <h2>Feature Configuration</h2>
                    <div class="row mt16 o_settings_container">
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="manus_enable_document_processing"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="manus_enable_document_processing"/>
                                <div class="text-muted">
                                    Extract data from documents and auto-fill forms
                                </div>
                            </div>
                        </div>
                        
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="manus_enable_data_analysis"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="manus_enable_data_analysis"/>
                                <div class="text-muted">
                                    Analyze data for insights and predictions
                                </div>
                            </div>
                        </div>
                        
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="manus_enable_workflow_automation"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="manus_enable_workflow_automation"/>
                                <div class="text-muted">
                                    Automate workflows and business processes
                                </div>
                            </div>
                        </div>
                        
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="manus_enable_calendar_management"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="manus_enable_calendar_management"/>
                                <div class="text-muted">
                                    Smart scheduling and calendar optimization
                                </div>
                            </div>
                        </div>
                        
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="manus_enable_customer_interaction"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="manus_enable_customer_interaction"/>
                                <div class="text-muted">
                                    Enhance customer interactions with AI
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <h2>Module Integration</h2>
                    <div class="row mt16 o_settings_container">
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="manus_enable_crm_integration"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="manus_enable_crm_integration"/>
                                <div class="text-muted">
                                    Enhance CRM with AI-powered lead scoring and customer insights
                                </div>
                            </div>
                        </div>
                        
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="manus_enable_project_integration"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="manus_enable_project_integration"/>
                                <div class="text-muted">
                                    Optimize project management with AI assistance
                                </div>
                            </div>
                        </div>
                        
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="manus_enable_document_integration"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="manus_enable_document_integration"/>
                                <div class="text-muted">
                                    Auto-fill documents and extract data from uploads
                                </div>
                            </div>
                        </div>
                        
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="manus_enable_hr_integration"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="manus_enable_hr_integration"/>
                                <div class="text-muted">
                                    Streamline HR processes with AI assistance
                                </div>
                            </div>
                        </div>
                        
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="manus_enable_website_integration"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="manus_enable_website_integration"/>
                                <div class="text-muted">
                                    Add AI capabilities to your website
                                </div>
                            </div>
                        </div>
                        
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="manus_enable_calendar_integration"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="manus_enable_calendar_integration"/>
                                <div class="text-muted">
                                    Optimize scheduling and calendar management
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
