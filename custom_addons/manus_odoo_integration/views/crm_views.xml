<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Manus CRM Form View -->
    <record id="view_manus_crm_form" model="ir.ui.view">
        <field name="name">manus.crm.form</field>
        <field name="model">manus.crm</field>
        <field name="arch" type="xml">
            <form string="CRM Analysis">
                <header>
                    <button name="action_analyze" string="Analyze" type="object" class="oe_highlight" invisible="state not in ['draft']"/>
                    <button name="action_reset_to_draft" string="Reset to Draft" type="object" invisible="state == 'draft'"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,processing,completed"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Analysis Name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="lead_id" domain="[('type', 'in', ['lead', 'opportunity'])]"/>
                            <field name="partner_id" readonly="1"/>
                            <field name="analysis_type"/>
                        </group>
                        <group>
                            <field name="user_id"/>
                            <field name="company_id" groups="base.group_multi_company"/>
                            <field name="result_score" invisible="state != 'completed'" widget="percentpie"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Analysis Results" invisible="state != 'completed'">
                            <group>
                                <field name="result_summary" placeholder="Analysis summary will appear here after processing"/>
                            </group>
                            <group>
                                <field name="result_details" placeholder="Detailed analysis will appear here after processing"/>
                            </group>
                        </page>
                        <page string="Error" invisible="state != 'failed'">
                            <field name="error_message"/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Manus CRM Tree View -->
    <record id="view_manus_crm_tree" model="ir.ui.view">
        <field name="name">manus.crm.tree</field>
        <field name="model">manus.crm</field>
        <field name="arch" type="xml">
            <tree string="CRM Analysis" decoration-info="state == 'draft'" decoration-warning="state == 'processing'" decoration-success="state == 'completed'" decoration-danger="state == 'failed'">
                <field name="name"/>
                <field name="lead_id"/>
                <field name="analysis_type"/>
                <field name="result_score" widget="progressbar"/>
                <field name="user_id"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <!-- Manus CRM Search View -->
    <record id="view_manus_crm_search" model="ir.ui.view">
        <field name="name">manus.crm.search</field>
        <field name="model">manus.crm</field>
        <field name="arch" type="xml">
            <search string="Search CRM Analysis">
                <field name="name"/>
                <field name="lead_id"/>
                <field name="analysis_type"/>
                <field name="user_id"/>
                <filter string="Draft" name="draft" domain="[('state', '=', 'draft')]"/>
                <filter string="Processing" name="processing" domain="[('state', '=', 'processing')]"/>
                <filter string="Completed" name="completed" domain="[('state', '=', 'completed')]"/>
                <filter string="Failed" name="failed" domain="[('state', '=', 'failed')]"/>
                <group expand="0" string="Group By">
                    <filter string="Status" name="group_by_state" context="{'group_by': 'state'}"/>
                    <filter string="Analysis Type" name="group_by_type" context="{'group_by': 'analysis_type'}"/>
                    <filter string="Lead/Opportunity" name="group_by_lead" context="{'group_by': 'lead_id'}"/>
                    <filter string="Salesperson" name="group_by_user" context="{'group_by': 'user_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Manus CRM Action -->
    <record id="action_manus_crm" model="ir.actions.act_window">
        <field name="name">CRM Analysis</field>
        <field name="res_model">manus.crm</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="view_manus_crm_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new CRM analysis
            </p>
            <p>
                Analyze your leads and opportunities with Manus AI.
                Get insights on lead scoring, sentiment analysis,
                next action prediction, and churn risk assessment.
            </p>
        </field>
    </record>

    <!-- CRM Lead Form View Inheritance -->
    <record id="crm_lead_view_form_inherit_manus" model="ir.ui.view">
        <field name="name">crm.lead.view.form.inherit.manus</field>
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref="crm.crm_lead_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('oe_button_box')]" position="inside">
                <button name="action_analyze_with_manus" type="object" class="oe_stat_button" icon="fa-brain" invisible="type not in ['lead', 'opportunity']">
                    <div class="o_field_widget o_stat_info">
                        <span class="o_stat_value">
                            <field name="manus_score" widget="integer"/>%
                        </span>
                        <span class="o_stat_text">Manus Score</span>
                    </div>
                </button>
            </xpath>
            <xpath expr="//notebook" position="inside">
                <page string="Manus Analysis" invisible="manus_analysis_summary == False">
                    <field name="manus_analysis_summary"/>
                </page>
            </xpath>
        </field>
    </record>

    <!-- Menu Items -->
    <menuitem id="menu_manus_crm" name="CRM Analysis" parent="menu_manus_root" action="action_manus_crm" sequence="20"/>
</odoo>
