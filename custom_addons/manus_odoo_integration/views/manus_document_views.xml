<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Manus Document Form View -->
    <record id="view_manus_document_form" model="ir.ui.view">
        <field name="name">manus.document.form</field>
        <field name="model">manus.document</field>
        <field name="arch" type="xml">
            <form string="Document Processing">
                <header>
                    <button name="action_process_document" string="Process Document" type="object" class="oe_highlight" invisible="state not in ['draft']"/>
                    <button name="action_reset_to_draft" string="Reset to Draft" type="object" invisible="state == 'draft'"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,processing,processed"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Document Name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="document_type"/>
                            <field name="partner_id"/>
                            <field name="user_id"/>
                        </group>
                        <group>
                            <field name="document_file" filename="document_filename"/>
                            <field name="document_filename" invisible="1"/>
                            <field name="company_id" groups="base.group_multi_company"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Extracted Data" invisible="state not in ['processed']">
                            <field name="extracted_data" widget="text_json"/>
                        </page>
                        <page string="Processing Result" invisible="state not in ['processed']">
                            <field name="processing_result"/>
                        </page>
                        <page string="Error" invisible="state != 'failed'">
                            <field name="error_message"/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Manus Document Tree View -->
    <record id="view_manus_document_tree" model="ir.ui.view">
        <field name="name">manus.document.tree</field>
        <field name="model">manus.document</field>
        <field name="arch" type="xml">
            <list string="Documents" decoration-info="state == 'draft'" decoration-warning="state == 'processing'" decoration-success="state == 'processed'" decoration-danger="state == 'failed'">
                <field name="name"/>
                <field name="document_type"/>
                <field name="partner_id"/>
                <field name="user_id"/>
                <field name="state"/>
                <field name="company_id" groups="base.group_multi_company"/>
            </list>
        </field>
    </record>

    <!-- Manus Document Search View -->
    <record id="view_manus_document_search" model="ir.ui.view">
        <field name="name">manus.document.search</field>
        <field name="model">manus.document</field>
        <field name="arch" type="xml">
            <search string="Search Documents">
                <field name="name"/>
                <field name="document_type"/>
                <field name="partner_id"/>
                <field name="user_id"/>
                <filter string="Draft" name="draft" domain="[('state', '=', 'draft')]"/>
                <filter string="Processing" name="processing" domain="[('state', '=', 'processing')]"/>
                <filter string="Processed" name="processed" domain="[('state', '=', 'processed')]"/>
                <filter string="Failed" name="failed" domain="[('state', '=', 'failed')]"/>
                <group expand="0" string="Group By">
                    <filter string="Status" name="group_by_state" context="{'group_by': 'state'}"/>
                    <filter string="Document Type" name="group_by_type" context="{'group_by': 'document_type'}"/>
                    <filter string="Partner" name="group_by_partner" context="{'group_by': 'partner_id'}"/>
                    <filter string="Responsible" name="group_by_user" context="{'group_by': 'user_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Manus Document Action -->
    <record id="action_manus_document" model="ir.actions.act_window">
        <field name="name">Document Processing</field>
        <field name="res_model">manus.document</field>
        <field name="view_mode">list,form</field>
        <field name="search_view_id" ref="view_manus_document_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Upload a document for AI processing
            </p>
            <p>
                Upload documents to extract data using Manus AI.
                Supported document types include invoices, receipts,
                contracts, resumes, and more.
            </p>
        </field>
    </record>

    <!-- Menu Items -->
    <menuitem id="menu_manus_root" name="Manus AI" sequence="90" web_icon="manus_odoo_integration,static/description/icon.png"/>
    <menuitem id="menu_manus_document" name="Document Processing" parent="menu_manus_root" action="action_manus_document" sequence="10"/>
</odoo>
