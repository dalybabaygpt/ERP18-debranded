<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Manus Project Form View -->
    <record id="view_manus_project_form" model="ir.ui.view">
        <field name="name">manus.project.form</field>
        <field name="model">manus.project</field>
        <field name="arch" type="xml">
            <form string="Project Analysis">
                <header>
                    <button name="action_analyze" string="Analyze" type="object" class="oe_highlight" attrs="{'invisible': [('state', 'not in', ['draft'])]}"/>
                    <button name="action_reset_to_draft" string="Reset to Draft" type="object" attrs="{'invisible': [('state', '=', 'draft')]}"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,processing,completed"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Analysis Name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="project_id"/>
                            <field name="task_id" domain="[('project_id', '=', project_id)]" attrs="{'required': [('project_id', '=', False)]}"/>
                            <field name="analysis_type"/>
                        </group>
                        <group>
                            <field name="user_id"/>
                            <field name="company_id" groups="base.group_multi_company"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Analysis Results" attrs="{'invisible': [('state', '!=', 'completed')]}">
                            <group>
                                <field name="result_summary" placeholder="Analysis summary will appear here after processing"/>
                            </group>
                            <group>
                                <field name="result_details" placeholder="Detailed analysis will appear here after processing"/>
                            </group>
                        </page>
                        <page string="Error" attrs="{'invisible': [('state', '!=', 'failed')]}">
                            <field name="error_message"/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Manus Project Tree View -->
    <record id="view_manus_project_tree" model="ir.ui.view">
        <field name="name">manus.project.tree</field>
        <field name="model">manus.project</field>
        <field name="arch" type="xml">
            <tree string="Project Analysis" decoration-info="state == 'draft'" decoration-warning="state == 'processing'" decoration-success="state == 'completed'" decoration-danger="state == 'failed'">
                <field name="name"/>
                <field name="project_id"/>
                <field name="task_id"/>
                <field name="analysis_type"/>
                <field name="user_id"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <!-- Manus Project Search View -->
    <record id="view_manus_project_search" model="ir.ui.view">
        <field name="name">manus.project.search</field>
        <field name="model">manus.project</field>
        <field name="arch" type="xml">
            <search string="Search Project Analysis">
                <field name="name"/>
                <field name="project_id"/>
                <field name="task_id"/>
                <field name="analysis_type"/>
                <field name="user_id"/>
                <filter string="Draft" name="draft" domain="[('state', '=', 'draft')]"/>
                <filter string="Processing" name="processing" domain="[('state', '=', 'processing')]"/>
                <filter string="Completed" name="completed" domain="[('state', '=', 'completed')]"/>
                <filter string="Failed" name="failed" domain="[('state', '=', 'failed')]"/>
                <group expand="0" string="Group By">
                    <filter string="Status" name="group_by_state" context="{'group_by': 'state'}"/>
                    <filter string="Analysis Type" name="group_by_type" context="{'group_by': 'analysis_type'}"/>
                    <filter string="Project" name="group_by_project" context="{'group_by': 'project_id'}"/>
                    <filter string="Task" name="group_by_task" context="{'group_by': 'task_id'}"/>
                    <filter string="Responsible" name="group_by_user" context="{'group_by': 'user_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Manus Project Action -->
    <record id="action_manus_project" model="ir.actions.act_window">
        <field name="name">Project Analysis</field>
        <field name="res_model">manus.project</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="view_manus_project_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new project analysis
            </p>
            <p>
                Analyze your projects and tasks with Manus AI.
                Get insights on task estimation, resource allocation,
                risk assessment, and dependency analysis.
            </p>
        </field>
    </record>

    <!-- Project Task Form View Inheritance -->
    <record id="view_task_form2_inherit_manus" model="ir.ui.view">
        <field name="name">project.task.form.inherit.manus</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="project.view_task_form2"/>
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('oe_button_box')]" position="inside">
                <button name="action_analyze_with_manus" type="object" class="oe_stat_button" icon="fa-brain">
                    <div class="o_field_widget o_stat_info">
                        <span class="o_stat_value">
                            <field name="manus_estimated_hours" widget="float_time"/>
                        </span>
                        <span class="o_stat_text">Manus Estimate</span>
                    </div>
                </button>
            </xpath>
            <xpath expr="//notebook" position="inside">
                <page string="Manus Analysis" attrs="{'invisible': [('manus_analysis_summary', '=', False)]}">
                    <field name="manus_analysis_summary"/>
                </page>
            </xpath>
        </field>
    </record>

    <!-- Menu Items -->
    <menuitem id="menu_manus_project" name="Project Analysis" parent="menu_manus_root" action="action_manus_project" sequence="30"/>
</odoo>
